    "electron-builder": "^20.38.4",
    "electron-reloader": "^0.2.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.3"
  },
  "homepage": "https://github.com/marckohlbrugge/wip-menubar#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "wip",
    "electron",
    "electron-app",
    "macos",
    "menubar",
    "streak"
