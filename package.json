  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/app.js",
  "repository": {
    "type": "git",
